---
import { getLangFromUrl, useTranslations } from '../i18n';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Secure payment processing with Ezyba" } = Astro.props;

// Simple domain-based language detection
let lang = 'pt'; // Default to Portuguese
if (Astro.url.hostname.includes('.com') && !Astro.url.hostname.includes('.com.br')) {
  lang = 'en'; // .com domain uses English
} else if (Astro.url.pathname.startsWith('/en')) {
  lang = 'en'; // URL-based for localhost
}

const t = useTranslations(lang);

// Language switcher URLs for localhost
let alternateUrl = '#';
if (Astro.url.hostname.includes('localhost')) {
  if (lang === 'pt') {
    // Portuguese to English mappings
    if (Astro.url.pathname === '/pagamento') alternateUrl = '/en/payment';
    else if (Astro.url.pathname === '/termos') alternateUrl = '/en/terms';
    else if (Astro.url.pathname === '/privacidade') alternateUrl = '/en/privacy';
    else if (Astro.url.pathname === '/sucesso') alternateUrl = '/en/success';
    else if (Astro.url.pathname === '/gerenciar') alternateUrl = '/en/manage';
    else if (Astro.url.pathname === '/admin/gerador') alternateUrl = '/en/admin/generator';
    else alternateUrl = '/en' + Astro.url.pathname;
  } else {
    // English to Portuguese mappings
    if (Astro.url.pathname === '/en/payment') alternateUrl = '/pagamento';
    else if (Astro.url.pathname === '/en/terms') alternateUrl = '/termos';
    else if (Astro.url.pathname === '/en/privacy') alternateUrl = '/privacidade';
    else if (Astro.url.pathname === '/en/success') alternateUrl = '/sucesso';
    else if (Astro.url.pathname === '/en/manage') alternateUrl = '/gerenciar';
    else if (Astro.url.pathname === '/en/admin/generator') alternateUrl = '/admin/gerador';
    else alternateUrl = Astro.url.pathname.replace('/en', '') || '/';
  }
}
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
