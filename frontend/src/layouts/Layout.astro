---
import { getLangFromUrl, useTranslations } from '../i18n';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Secure payment processing with Ezyba" } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Function to get the equivalent URL in the other language
const getAlternateUrl = (currentPath: string, currentLang: string, searchParams: string) => {
  let newPath = '';
  
  if (currentLang === 'pt') {
    // Portuguese to English
    if (currentPath === '/') newPath = '/en';
    else if (currentPath === '/pagamento') newPath = '/en/payment';
    else if (currentPath === '/privacidade') newPath = '/en/privacy';
    else if (currentPath === '/termos') newPath = '/en/terms';
    else if (currentPath === '/admin/gerador') newPath = '/en/admin/generator';
    else newPath = `/en${currentPath}`;
  } else {
    // English to Portuguese
    if (currentPath === '/en' || currentPath === '/en/') newPath = '/';
    else if (currentPath === '/en/payment') newPath = '/pagamento';
    else if (currentPath === '/en/privacy') newPath = '/privacidade';
    else if (currentPath === '/en/terms') newPath = '/termos';
    else if (currentPath === '/en/admin/generator') newPath = '/admin/gerador';
    else newPath = currentPath.replace('/en', '') || '/';
  }
  
  return searchParams ? `${newPath}?${searchParams}` : newPath;
};

const alternateUrl = getAlternateUrl(Astro.url.pathname, lang, Astro.url.search.slice(1));
