            </a>
            <button 
              id="mobile-menu-button"
              class="p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
          
          <!-- Desktop language switcher -->
          <div class="hidden md:flex items-center space-x-2">
            <a 
              href={alternateUrl}
              class="px-3 py-1 text-sm border rounded-md hover:bg-gray-100 transition-colors"
            >
              {lang === 'pt' ? 'EN' : 'PT'}
            </a>
          </div>
        </div>
        
        <!-- Mobile menu -->
        <div id="mobile-menu" class="md:hidden pb-4 hidden">
          <div class="flex flex-col space-y-2 pt-4 border-t">
            <a href={lang === 'pt' ? '/' : '/en'} class="text-gray-700 hover:text-blue-600 transition-colors py-2">
              {t('nav.home')}
            </a>
            <a href={lang === 'pt' ? '/pagamento' : '/en/payment'} class="text-gray-700 hover:text-blue-600 transition-colors py-2">
              {t('nav.payment')}
            </a>
            <a href={lang === 'pt' ? '/gerenciar' : '/en/manage'} class="text-gray-700 hover:text-blue-600 transition-colors py-2">
              {t('nav.manage')}
            </a>
