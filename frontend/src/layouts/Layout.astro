    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    
    <!-- Block Search Engines -->
    <meta name="robots" content="noindex, nofollow, noarchive, nosnippet, noimageindex, nocache" />
    <meta name="googlebot" content="noindex, nofollow, noarchive, nosnippet, noimageindex, nocache" />
    <meta name="bingbot" content="noindex, nofollow, noarchive, nosnippet, noimageindex, nocache" />
    <meta name="duckduckbot" content="noindex, nofollow, noarchive, nosnippet, noimageindex, nocache" />
    
    <!-- Custom head content -->
    <slot name="head" />
    
    <!-- No Language Alternates (blocked from indexing) -->
    
    <!-- Stripe.js -->
    <script src="https://js.stripe.com/v3/"></script>
    
    <!-- Cloudflare Turnstile -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    
    <!-- Mobile menu script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
          });
        }
        
        // Save form data before language switch
        const languageSwitchers = document.querySelectorAll('a[href*="/en"], a[href^="/"]');
        languageSwitchers.forEach(link => {
          if (link.textContent?.includes('EN') || link.textContent?.includes('PT')) {
            link.addEventListener('click', function(e) {
              const formData = {
                name: document.getElementById('name')?.value || '',
                email: document.getElementById('email')?.value || '',
                phone: document.getElementById('phone')?.value || '',
                amount: document.getElementById('amount')?.value || '',
                currency: document.getElementById('currency')?.value || 'usd',
                paymentType: (document.getElementById('payment-type') || document.getElementById('paymentType'))?.value || 'one_time'
              };
              
              if (formData.name || formData.email || formData.amount) {
                const now = Date.now();
                const storedData = {
                  data: formData,
                  timestamp: now,
                  expiresAt: now + (10 * 60 * 1000) // 10 minutes
                };
                localStorage.setItem('ezyba_form_data', JSON.stringify(storedData));
              }
            });
          }
        });
        
        // Auto-cleanup expired form data and restore on page load
        setTimeout(() => {
          const savedFormData = localStorage.getItem('ezyba_form_data');
          if (savedFormData) {
            try {
              const storedData = JSON.parse(savedFormData);
              const now = Date.now();
              
              // Check if data has expired
              if (storedData.expiresAt && now > storedData.expiresAt) {
                localStorage.removeItem('ezyba_form_data');
                return;
              }
              
              // Use the actual form data
              const formData = storedData.data || storedData;
              const nameField = document.getElementById('name');
              const emailField = document.getElementById('email');
              const phoneField = document.getElementById('phone');
              const amountField = document.getElementById('amount');
              const currencyField = document.getElementById('currency');
              const typeField = document.getElementById('payment-type') || document.getElementById('paymentType');
              
              if (nameField && formData.name) nameField.value = formData.name;
              if (emailField && formData.email) emailField.value = formData.email;
              if (phoneField && formData.phone) phoneField.value = formData.phone;
              if (amountField && formData.amount) amountField.value = formData.amount;
              if (currencyField && formData.currency) currencyField.value = formData.currency;
              if (typeField && formData.paymentType) typeField.value = formData.paymentType;
            } catch (error) {
              console.warn('Failed to restore form data:', error);
            }
          }
        }, 100);
      });
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
