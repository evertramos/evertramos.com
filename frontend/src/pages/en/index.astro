---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Evert Ramos - Automation and DevOps">
  <div class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
          Evert Ramos
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-8">
          Automation and DevSecOps Specialist
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a 
            href="https://github.com/evertramos" 
            target="_blank"
            class="bg-gray-900 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-800 transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 min-w-[200px] flex items-center justify-center gap-2"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View GitHub
          </a>
          
          <a 
            href="/en/payment" 
            class="bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 min-w-[200px] flex items-center justify-center gap-2"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
            Payment
          </a>
        </div>

        <!-- Skills Section -->
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Technical Competencies</h2>
          
          <!-- Programming Languages -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 text-center">Programming Languages</h3>
            <div class="flex flex-wrap justify-center gap-3">
              <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium">Python</span>
              <span class="bg-cyan-100 text-cyan-800 px-4 py-2 rounded-full text-sm font-medium">PHP</span>
              <span class="bg-gray-100 text-gray-800 px-4 py-2 rounded-full text-sm font-medium">Bash Script</span>
              <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium">JavaScript</span>
              <span class="bg-indigo-100 text-indigo-800 px-4 py-2 rounded-full text-sm font-medium">SQL</span>
            </div>
          </div>

          <!-- Technical Knowledge -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 text-center">Technical Knowledge</h3>
            <div class="flex flex-wrap justify-center gap-3">
              <span class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-medium">Linux</span>
              <span class="bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-medium">Docker</span>
              <span class="bg-purple-100 text-purple-800 px-4 py-2 rounded-full text-sm font-medium">Kubernetes</span>
              <span class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-medium">Zero Trust</span>
              <span class="bg-emerald-100 text-emerald-800 px-4 py-2 rounded-full text-sm font-medium">Laravel</span>
              <span class="bg-pink-100 text-pink-800 px-4 py-2 rounded-full text-sm font-medium">FastAPI</span>
              <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium">GitHub Actions</span>
              <span class="bg-indigo-100 text-indigo-800 px-4 py-2 rounded-full text-sm font-medium">DevSecOps</span>
              <span class="bg-orange-100 text-orange-800 px-4 py-2 rounded-full text-sm font-medium">NGINX</span>
              <span class="bg-teal-100 text-teal-800 px-4 py-2 rounded-full text-sm font-medium">MySQL</span>
              <span class="bg-slate-100 text-slate-800 px-4 py-2 rounded-full text-sm font-medium">PostgreSQL</span>
            </div>
          </div>

          <!-- Cloud Platforms -->
          <div>
            <h3 class="text-xl font-semibold text-gray-800 mb-4 text-center">Cloud Platforms</h3>
            <div class="flex flex-wrap justify-center gap-3">
              <span class="bg-cyan-100 text-cyan-800 px-4 py-2 rounded-full text-sm font-medium">Cloudflare</span>
              <span class="bg-orange-100 text-orange-800 px-4 py-2 rounded-full text-sm font-medium">AWS</span>
              <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium">Digital Ocean</span>
              <span class="bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-medium">Oracle Cloud</span>
              <span class="bg-purple-100 text-purple-800 px-4 py-2 rounded-full text-sm font-medium">OVH</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Ensure responsive design */
  @media (max-width: 640px) {
    .min-w-[200px] {
      min-width: 100%;
    }
  }
</style>